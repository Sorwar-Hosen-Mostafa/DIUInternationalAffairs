<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daffodilvarsity.diuinternationalaffairs">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoi"
        android:label="DIU Int. Affairs\nApp"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".activity.FlashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Home"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.EventDescriptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FullScreenPhotoActivity"
            android:screenOrientation="fullSensor" />
        <activity android:name=".activity.Profile" />
        <activity android:name=".StudentRegistration" />
        <activity android:name=".UserTypeActivity" />
        <activity android:name=".ActivityTeacherRegistration" />
        <activity android:name=".activity.MOUlistActivity"/>

        <activity android:name=".activity.AboutUsActivity" />
        <activity android:name=".activity.DeveloperInfoActivity"></activity>
    </application>

</manifest>